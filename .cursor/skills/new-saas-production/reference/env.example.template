# {{PROJECT_TITLE}} Configuration
# Copy to .env and fill in your values

# ===========================================
# SECURITY (REQUIRED)
# ===========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@db:5432/{{PROJECT_NAME}}

# ===========================================
# T-BANK PAYMENT (Get from merchant.tbank.ru)
# ===========================================
TBANK_TERMINAL_KEY=
TBANK_PASSWORD=
TBANK_PRODUCTION=false
TBANK_MOCK=true

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@{{DOMAIN}}

# ===========================================
# APPLICATION
# ===========================================
BASE_URL=https://{{DOMAIN}}
DEBUG=false

